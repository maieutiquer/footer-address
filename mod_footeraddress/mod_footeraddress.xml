<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.4" client="site" method="upgrade">
	<name>mod_footeraddress</name>
	<author>Daniel Rodriguez</author>
	<creationDate>2014-05-05</creationDate>
	<version>1.8</version>
	<description>MOD_FOOTERADDRESS_XML_DESCRIPTION</description>
	<files>
		<filename>mod_footeraddress.xml</filename>
		<filename module="mod_footeraddress">mod_footeraddress.php</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic" label="MOD_FOOTERADDRESS_ADDRESS">
				<field
					name="object_type"
					type="list"
					default="organization"
					label="MOD_FOOTERADDRESS_OBJECT_TYPE"
					description="MOD_FOOTERADDRESS_OBJECT_TYPE_DESC">
					<option value="Organization">MOD_FOOTERADDRESS_OBJECT_TYPE_ORGANIZATION</option>
					<option value="Person">MOD_FOOTERADDRESS_OBJECT_TYPE_PERSON</option>
				</field>
				<field
					name="show_separators"
					type="checkbox"
					default=""
					label="MOD_FOOTERADDRESS_SHOW_SEPARATORS"
					description="MOD_FOOTERADDRESS_SHOW_SEPARATORS_DESC" />
				<field
					name="separator_char"
					type="text"
					default="|"
					label="MOD_FOOTERADDRESS_SEPARATOR_CHAR"
					description="MOD_FOOTERADDRESS_SEPARATOR_CHAR_DESC" />
				<field
					name="name"
					type="text"
					default=""
					label="MOD_FOOTERADDRESS_NAME"
					description="MOD_FOOTERADDRESS_NAME_DESC" />
				<field
					name="description"
					type="text"
					default=""
					label="MOD_FOOTERADDRESS_DESCRIPTION"
					description="MOD_FOOTERADDRESS_DESCRIPTION_DESC" />
				<field
					name="address_street"
					type="text"
					default=""
					label="MOD_FOOTERADDRESS_ADDRESS_STREET"
					description="MOD_FOOTERADDRESS_FIELD,2" />
				<field
					name="address_postcode"
					type="text"
					default=""
					label="MOD_FOOTERADDRESS_ADDRESS_POSTALCODE"
					description="MOD_FOOTERADDRESS_FIELD,3" />
				<field
					name="address_locality"
					type="text"
					default=""
					label="MOD_FOOTERADDRESS_ADDRESS_LOCALITY"
					description="MOD_FOOTERADDRESS_FIELD,4" />
				<field
					name="address_country"
					type="text"
					default=""
					label="MOD_FOOTERADDRESS_ADDRESS_COUNTRY"
					description="MOD_FOOTERADDRESS_FIELD,5" />
				<field
					name="mobile"
					type="text"
					default=""
					label="MOD_FOOTERADDRESS_MOBILE"
					description="MOD_FOOTERADDRESS_ANY_FORMAT" />
				<field
					name="landline"
					type="text"
					default=""
					label="MOD_FOOTERADDRESS_LANDLINE"
					description="MOD_FOOTERADDRESS_ANY_FORMAT" />
				<field
					name="fax"
					type="text"
					default=""
					label="MOD_FOOTERADDRESS_FAX"
					description="MOD_FOOTERADDRESS_ANY_FORMAT" />
				<field
					name="email"
					type="text"
					default=""
					label="MOD_FOOTERADDRESS_EMAIL"
					description="MOD_FOOTERADDRESS_EMAIL_DESC" />
				<field
					name="more"
					type="text"
					default=""
					label="MOD_FOOTERADDRESS_MOREINFO"
					description="MOD_FOOTERADDRESS_MOREINFO_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
